<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha Portal</title>
    <script type="importmap"></script>

    <script src="~/js/DarkMode.js"></script>

    <script src="~/js/members.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <div class="modal-overlay" id="modalOverlay"></div>
    <div class="portal">
        <div class="alpha-logotype">
            @await Html.PartialAsync("Partials/Components/_AlphaLogotype")
        </div>
          <div class="side">
             @await Html.PartialAsync("Partials/Components/_NavLinks")
          </div>
          <div class="top">
             @await Html.PartialAsync("_HeaderPartial")
        </div>
        <div class="main">
            @RenderBody()

        </div>
    </div>
    <partial name="_CookieConsentPartial" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js" integrity="sha512-7SRCYIJtR6F8ocwW7UxW6wGKqbSyqREDbfCORCbGLatU0iugBLwyOXpzhkPyHIFdBO0K2VCu57fvP2Twgx1o2A==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/cookie-consent.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
