
@{
    Layout = "_PortalLayout";
    ViewData["Title"] = "Team Members";
}

<partial name="Partials/Sections/User/_AddMemberForm" model="new AddMemberFormData()" />
<partial name="Partials/Sections/Member/_EditMemberForm" model="new EditMemberFormData()" />

<partial name="Partials/Sections/User/_UserList" model="@Model" />
<button type="button" data-modal="true" data-target="#addMemberModal" class="btn btn-add btn-blue" aria-label="Add a new team member">
    Add Member
</button>
<a class="btn btn-primary" asp-controller="Auth" asp-action="LogIn">
    User Registration Form
</a>
<section id="team-members">
    <header class="page-header">
        <h2>Team Members</h2>
        <button type="button" data-modal="true" data-target="#addMemberModal" class="btn btn-add btn-blue">Add Member</button>
    </header>
    <a class="btn btn-primary" asp-controller="Auth" asp-action="LogIn">
        User Registration Form
    </a>
    <a asp-controller="Admin" asp-action="Members" class="nav-link">Team Members</a>

    <!-- Use the Shared partial that shows the list of users -->
    <partial name="Partials/Sections/User/_UserList" model="@Model" />

        @* <partial name="Partials/Sections/Member/_MemberList" /> *@

</section>