<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha Portal</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
   
    <div class="portal">
        <div class="alpha-logotype">
            @await Html.PartialAsync("Partials/Components/_AlphaLogotype")
        </div>
          <div class="side">
                @await Html.PartialAsync("Partials/Components/_NavLinks")
          </div>

          <div class="top">
              <div>
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <span> Search anything...</span>
            </div>
            <div class="notification">
                <i class="fa-solid fa-bell"></i>
                <i class="fa-solid fa-gear"></i>
                <div class="user-menu">
                    <img src="~/images/Avatar.svg" alt="Avatar icon." class="avatar-icon" onclick="toggleMenu()" />
                    <div id="dropdownMenu" class="dropdown-content">
                        <div class ="toggle-dark">
                            <i class="fa-solid fa-gear"></i>
                            <span>Dark mode</span>
                            <div class="dark-mode">
                                <i class="fa-solid fa-toggle-large-on"></i>
                            </div>
                        </div>
                        <a class="btn btn-gray btn-logout" asp-controller="Auth" asp-action="Logout">Logout</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
