@model UserRegistrationViewModel

<div id="addUserModal" class="modal">
    <div class="modal-content">

        <div class="modal-header">
            <h3>Add User</h3>
            <button type="button" class="btn-close" data-close="true" aria-label="Close"></button>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert-danger error">
                @ViewBag.ErrorMessage
            </div>
        })
        <form novalidate method="post" asp-action="Index" asp-controller="Users" enctype="multipart/form-data" >

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="field-group">
                    <label asp-for="Role"></label>
                    <span asp-validation-for="Role"></span>
                </div>
                <div class="field-group">
                   <select class="user-select-auto" asp-for="Role" asp-items="ViewBag.Roles" required>
                        <option class="text-muted" disabled hidden selected value="">Select User Role</option>
                   </select>
                </div>
            </div>

            <button type="submit" class="btn btn-submit btn-blue">Add User</button>
        </form>

    </div>

</div>
