@model UserRegistrationViewModel

<div id="adduserModal" class="modal">
    <div class="modal-content">

        <div class="modal-header">
            <h3>Add User</h3>
            <button type="button" class="btn-close" data-close="true"></button>
        </div>

        <form novalidate method="post" asp-action="Index" asp-controller="Users" enctype="multipart/form-data" >

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <div class="field-group">
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <div class="field-group">
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <div class="field-group">
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Role"></label>
                <div class="field-group">
                    <input asp-for="Role" />
                    <span asp-validation-for="Role"></span>
                    <i class="fa-solid fa-ellipsis" data-modal="true" data-target="Role"></i>
                </div>
            </div>

            <button type="submit" class="btn btn-submit btn-blue">Add User</button>
        </form>

    </div>

</div>
