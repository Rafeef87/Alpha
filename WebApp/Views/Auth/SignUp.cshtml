
@model SignUpFormData
@{
    Layout = "_CleanLayout";
    ViewData["Title"] = "Create Account";
}
<section id="signup" class="center-screen">


    <form asp-controller="Auth" asp-action="SignUp" method="post" novalidate enctype="multipart/form-data">

        <h1>@ViewData["Title"]</h1>

        @if (!string.IsNullOrEmpty(ViewBag?.ErrorMessage))
        {
            <div class="form-alert">
                @ViewBag?.ErrorMessage
            </div>
        }
        <div class="google-group">
            <img src="~/images/google-icon.svg" alt="Google Icon." />
            <h6>SignUp with Google</h6>
        </div>

        <span class="form-text">OR</span>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="check-group">
            <input type="checkbox" asp-for="TermsAndConditions" />
            <label asp-for="TermsAndConditions">I accept the <a>Terms and Conditions</a></label>
            
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-submit btn-blue">Create Account</button>
        </div>

        <div class="form-footer">
            <span>Already have an account? </span>
            <a asp-controller="Auth" asp-action="SignIn">Login</a>
        </div>

    </form>
</section>